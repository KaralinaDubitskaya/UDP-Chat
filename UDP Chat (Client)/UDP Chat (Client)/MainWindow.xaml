<Window x:Class="UDP_Chat__Client_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDP_Chat__Client_"
        mc:Ignorable="d"
        Title="UDP Chat" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="tblUsers" HorizontalAlignment="Left" Height="253" Margin="422,10,0,0" TextWrapping="Wrap" Text="Users:" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="22" Margin="10,275,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="398"/>
        <Button x:Name="btnSend" Content="Send" Background="White" HorizontalAlignment="Left" Height="22" Margin="422,275,0,0" VerticalAlignment="Top" Width="75"/>
        <Border BorderBrush="Gray" BorderThickness="0.5" Margin="10,10,101.4,57.8">
            <TextBlock x:Name="tblChat" HorizontalAlignment="Left" Height="253" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="398" />
        </Border>
 </Grid>
</Window>
